---
import '../components/global/GlobalStyles.astro';
import Layout from '../layouts/Layout.astro';
import logo from '../imgs/quote/logo.png';
import google from '../imgs/quote/google.png';
import moveDetails from '../imgs/quote/movedetails.png';
import personIcon from '../imgs/quote/icons/person.png';
import emailIcon from '../imgs/quote/icons/email.png';
import phoneIcon from '../imgs/quote/icons/phone.png';
import firstAddressIcon from '../imgs/quote/icons/address1.png';
import secondAddressIcon from '../imgs/quote/icons/address2.png';
import calendarIcon from '../imgs/quote/icons/calendar.png';
import inventoryList from '../imgs/quote/inventorylist.png';
import estimate from '../imgs/quote/estimate.png';
import emily from '../imgs/quote/emily.png';
import curoselFirst from '../imgs/quote/carousel/1.jpg';
import curoselSecond from '../imgs/quote/carousel/2.jpg';
import curoselThird from '../imgs/quote/carousel/3.jpg';
import phoneWhiteIcon from '../imgs/quote/icons/phonewhite.png';
---

<Layout
  title="- Quote"
  description="You can find the customer information on the page."
  removeFooter={true}
  removeHeader={true}
>
  <div class="max-w-screen-md mx-auto bg-white">
    <header class="bg-white p-4 flex justify-between items-center">
      <div class="flex items-center">
        <img src={logo} alt="Logo" class="h-[100px] w-auto" />
      </div>

      <div class="flex items-center">
        <div class="flex flex-col items-center">
          <img src={google} alt="Profile Picture" class="h-[80px] w-auto m-0" />
        </div>
      </div>
    </header>

    <div class="bg-[#EAFFDB] text-black text-light p-8 text-justify">
      <p>
        At <strong>No Worries Moving</strong>, we take pride in being a <strong>
          family-owned
        </strong> local moving company.Unlike larger moving corporations, we have
        no overhead expenses like franchise fees or costly billboard and TV advertisements.
        This allows us to focus on what truly matters: your satisfaction. We treat
        your belongings with care and respect, ensuring a <strong>
          smooth
        </strong> and <strong>stress-free</strong> moving experience for you and
        your family.
      </p>
    </div>

    <div class="max-w-screen-md mx-auto mt-4 pb-4">
      <div class="flex flex-col md:flex-row">
        <div
          class="flex-1 bg-white p-4 border-r md:border-r md:border-[#EAFFDB] text-center md:text-left"
        >
          <div
            class="inline-flex justify-center md:justify-start items-center mx-auto md:mx-0"
          >
            <img src={moveDetails} alt="Icon 1" class="h-6 w-auto" />
            <h2 class="text-lg font-bold ml-2">move details</h2>
          </div>
          <p class="hidden md:block text-xs font-bold mt-4 pl-[20px]">
            full name
          </p>

          <div class="flex items-center mt-4 md:mt-0">
            <img src={personIcon} alt="Icon" class="h-6 w-auto" />
            <input
              type="text"
              placeholder="Your input"
              value="Sergio Raic"
              readonly
              class="ml-2 focus:outline-none focus:border-transparent focus:ring-0 border-0"
            />
          </div>

          <p class="hidden md:block text-xs font-bold mt-4 pl-[20px]">email</p>
          <div class="flex items-center mt-4 md:mt-0">
            <img src={emailIcon} alt="Icon" class="h-6 w-auto" />
            <input
              type="text"
              placeholder="Your input"
              value="raic35@gmail.com"
              readonly
              class="ml-2 focus:outline-none focus:border-transparent focus:ring-0 border-0"
            />
          </div>

          <p class="hidden md:block text-xs font-bold mt-4 pl-[20px]">phone</p>
          <div class="flex items-center mt-4 md:mt-0">
            <img src={phoneIcon} alt="Icon" class="h-6 w-auto" />
            <input
              type="text"
              placeholder="Your input"
              value="(650) 398 8935"
              readonly
              class="ml-2 focus:outline-none focus:border-transparent focus:ring-0 border-0"
            />
          </div>

          <p class="hidden md:block text-xs font-bold mt-4 pl-[20px]">
            pickup address
          </p>
          <div class="flex items-center mt-4 md:mt-0">
            <img src={firstAddressIcon} alt="Icon" class="h-6 w-auto" />
            <input
              type="text"
              placeholder="Your input"
              value="8008 West Lawrence Ave, Norridge IL 60706"
              readonly
              class="ml-2 focus:outline-none focus:border-transparent focus:ring-0 border-0"
            />
          </div>

          <p class="hidden md:block text-xs font-bold mt-4 pl-[20px]">
            delivery address
          </p>
          <div class="flex items-center mt-4 md:mt-0">
            <img src={secondAddressIcon} alt="Icon" class="h-6 w-auto" />
            <input
              type="text"
              placeholder="Your input"
              value="2720 South River Road, Des Plaines IL 60018"
              readonly
              class="ml-2 focus:outline-none focus:border-transparent focus:ring-0 border-0"
            />
          </div>

          <p class="hidden md:block text-xs font-bold mt-4 pl-[20px]">
            requested date
          </p>
          <div class="flex items-center mt-4 md:mt-0">
            <img src={calendarIcon} alt="Icon" class="h-6 w-auto" />
            <input
              type="text"
              placeholder="Your input"
              value="9/22/2023"
              readonly
              class="ml-2 focus:outline-none focus:border-transparent focus:ring-0 border-0"
            />
          </div>
        </div>

        <div
          class="flex-1 bg-white p-4 border-r md:border-r md:border-[#EAFFDB] text-center md:text-left"
        >
          <div
            class="inline-flex justify-center md:justify-start items-center mx-auto md:mx-0"
          >
            <img src={inventoryList} alt="Icon 1" class="h-6 w-auto" />
            <h2 class="text-lg font-bold ml-2">inventory list</h2>
          </div>
          <div class="mt-4">
            <textarea
              class="w-full h-[300px] focus:outline-none focus:border-transparent focus:ring-0 border-0 bg-transparent"
              readonly
            >
              Call Emily at (217) 558 8965 to update inventory list
            </textarea>
          </div>
        </div>

        <div
          class="flex-1 bg-white p-4 border-r md:border-r md:border-[#EAFFDB] text-center md:text-left"
        >
          <div
            class="inline-flex justify-center md:justify-start items-center mx-auto md:mx-0"
          >
            <img src={estimate} alt="Icon 1" class="h-6 w-auto" />
            <h2 class="text-lg font-bold ml-2">estimate</h2>
          </div>
          <div class="flex flex-col space-y-4">
            <div class="flex items-center justify-between">
              <span class="font-bold">Rate:</span>
              <input
                type="text"
                class="border-0 focus:ring-0 w-[40%]"
                placeholder="Input 1"
                value="$119/hr"
              />
            </div>

            <div class="flex items-center justify-between">
              <span class="font-bold">Labor:</span>
              <input
                type="text"
                class="border-0 focus:ring-0 w-[40%]"
                placeholder="Input 2"
                value="3hrs"
              />
            </div>

            <div class="flex items-center justify-between">
              <span class="font-bold">Truck fee:</span>
              <input
                type="text"
                class="border-0 focus:ring-0 w-[40%]"
                placeholder="Input 3"
                value="$119"
              />
            </div>

            <div class="flex items-center justify-between">
              <span class="font-bold">Due now:</span>
              <input
                type="text"
                class="border-0 focus:ring-0 w-[40%]"
                placeholder="Input 4"
                value="$119"
              />
            </div>

            <div class="flex items-center justify-between">
              <span class="font-bold">Due later:</span>
              <input
                type="text"
                class="border-0 focus:ring-0 w-[40%]"
                placeholder="Input 5"
                value="$357"
              />
            </div>
          </div>
        </div>
      </div>
    </div>

    <section class="bg-white py-8">
      <div class="text-center">
        <p class="text-lg font-bold">
          Need to update any of details, want to place deposit? Call me at <a
            href="tel:+12176505984"
            class="underline text-[#42BA03]">(217) 650-5984</a
          >
        </p>
      </div>
    </section>

    <section class="py-8">
      <div class="flex">
        <div class="w-4/5">
          <div
            class="w-3/4 p-5 rounded-lg mx-auto text-justify"
            style="background-color: #EAFFDB;"
          >
            I've worked at No Worries Moving for two years, helping over 900
            families like yours move smoothly. Moving can be tough, but being
            prepared makes it easier. I focus on clear communication and am
            always here to answer questions or give advice. Contact me anytime
            by phone, email, or text.
          </div>
        </div>
        <div class="w-1/5">
          <section class="">
            <div class="flex flex-col items-center">
              <div class="w-full flex justify-center">
                <img src={emily} alt="Personal Assistant Image" class="w-4/5" />
              </div>
              <div class="text-xs mt-2 font-bold">Personal Assistant</div>
              <div class="text-lg mb-2 font-extrabold">Emily Wilson</div>
            </div>
          </section>
        </div>
      </div>
    </section>
    <section class="pb-[100px]">
      <div class="ml-4">
        <h1 class="font-bold text-lg">Our crew is having high skills...</h1>
      </div>

      <div class="flex h-[200px] relative overflow-hidden">
        <div
          class="absolute top-0 left-0 w-[60%] border-t-[4px]"
          style="border-color: #42BA03;"
        >
        </div>
        <div
          class="absolute bottom-0 left-0 w-full border-b-[3px]"
          style="border-color: #42BA03;"
        >
        </div>
        <img src={curoselFirst} alt="Image 1" class="h-[200px] w-auto" />
        <img src={curoselSecond} alt="Image 2" class="h-[200px] w-auto" />
        <img src={curoselThird} alt="Image 3" class="h-[200px] w-auto" />
        <img src={curoselFirst} alt="Image 1" class="h-[200px] w-auto" />
        <img src={curoselSecond} alt="Image 2" class="h-[200px] w-auto" />
        <img src={curoselThird} alt="Image 3" class="h-[200px] w-auto" />
      </div>
    </section>

    <footer
      class="fixed bottom-0 left-0 w-full h-[100px] bg-[#EAFFDB] flex items-center justify-around px-4"
    >
      <div class="flex items-center">
        <img src={emily} alt="Footer Image" class="h-[80px] w-auto" />
        <div class="ml-2">
          <div class="text-black font-bold">Emily Wilson</div>
          <div class="text-sm text-black">Personal Assistant</div>
        </div>
      </div>

      <div class="hidden md:block">
        <div class="text-black font-bold">Message to customer</div>
        <p class="text-xs text-black max-w-[500px]">
          My name is Emily. I'm a proud mother of three, who loves singing and
          watching magical shows. Coordinating people's relocations is something
          I genuinely enjoy, making my role as a 'Personal Assistant' deeply
          personal to me
        </p>
      </div>

      <button
        class="flex items-center py-2 px-4 text-white bg-blue-600 hover:bg-blue-700 rounded"
      >
        <img src={phoneWhiteIcon} alt="Icon" class="h-4 w-4 mr-2" />
        Call me
      </button>
    </footer>
  </div>
</Layout>
